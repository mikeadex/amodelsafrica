<section class="ls">
      <div class="container">
        <div class="row">

          <div class="col-sm-10 col-sm-push-1">

            <article>
              <div class="entry-thumbnail">
                <%=  image_tag @blog.blogprofile_url %>
              </div>

              <header class="entry-header bottommargin_25">

                <div class="post-adds text-right">

                  <span class="categories-links pull-left">
                    <a href="#">Session</a>
                  </span>

                  <span class="views-count">
                    <i class="flaticon-glasses highlight"></i>
                    648 views
                  </span>

                  <span class="item-likes">
                    <i class="flaticon-shapes highlight"></i>
                    152 likes
                  </span>

                  <span class="greylinks comments-link">
                    <a href="blog-single-full.html#comments">
                      <i class="flaticon-interface highlight"></i>
                      56
                    </a>
                  </span>

                </div>
                <!-- .entry-meta -->

                <h3 class="entry-title topmargin_10">
                  <a href="blog-single-full.html" rel="bookmark"><%= @blog.title %></a>
                </h3>

                <span class="date fontsize_12">
                  <time datetime="2016-08-01T15:05:23+00:00" class="entry-date">
                    <%= @blog.created_at.strftime("%B %d %Y") %>
                  </time>
                </span>

              </header>
              <!-- .entry-header -->

              <div class="entry-content">
                  <%= @blog.desc %>


            </article>

            <div class="comments-area" id="comments">
              <h2 class="text-uppercase">Comments on this post</h2>
              <ol class="comment-list">
                <li class="comment byuser odd alt thread-odd thread-alt depth-1">
