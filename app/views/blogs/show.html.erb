                          <span class="comment-date">
                            <time datetime="2016-11-08T15:05:23+00:00" class="entry-date">22.11.2016 at 12:34</time>
                          </span>
                        </div>
                      </article>
                      <!-- .comment-body -->
                    </li>
                    <!-- #comment-## -->
                  </ol>
                  <!-- .children -->
                </li>
                <!-- #comment-## -->
              </ol>
              <!-- .comment-list -->
            </div>
            <!-- #comments -->

            <div class="comment-respond" id="respond">
              <h2 class="text-uppercase bottommargin_25">Leave a comment</h2>

              <form class="comment-form" id="commentform" method="post" action="/">
                <div class="row columns_padding_10 columns_margin_0">
                  <div class="col-md-6">
                    <div class="comment-form-author form-group bottommargin_20">
                      <label for="author">Name
                        <span class="required">*</span>
                      </label>
                      <!-- <i class="rt-icon2-user-outline"></i> -->
                      <input type="text" aria-required="true" size="30" value="" name="author" id="author" class="form-control" placeholder="Enter your Name">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="comment-form-email form-group bottommargin_20">
                      <label for="comment_email">Email
                        <span class="required">*</span>
                      </label>
                      <!-- <i class="rt-icon2-mail2"></i> -->
                      <input type="email" aria-required="true" size="30" value="" name="comment_email" id="comment_email" class="form-control" placeholder="Enter your E-mail">
                    </div>
                  </div>
                  <div class="col-md-12">
                    <div class="comment-form-chat form-group bottommargin_30">
                      <label for="comment">Comment</label>
                      <!-- <i class="rt-icon2-pencil3"></i> -->
                      <textarea aria-required="true" rows="8" cols="45" name="comment" id="comment" class="form-control" placeholder="Comment"></textarea>
                    </div>
                  </div>
                </div>
                <p class="form-submit">
                  <button type="submit" id="submit" name="submit" class="theme_button">Leave a comment</button>
                </p>
              </form>
            </div>
            <!-- #respond -->

          </div>
          <!--eof .col-sm-8 (main content)-->

        </div>
      </div>
    </section>


